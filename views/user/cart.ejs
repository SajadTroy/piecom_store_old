<link rel="stylesheet" href="/cdn/css/product.css">
<link rel="stylesheet" href="/cdn/css/cart.css">

<div class="products-container">
    <div class="page-header">
        <h1>Shopping Cart</h1>
    </div>

    <% if (cart && cart.products.length > 0) { %>
        <div class="cart-grid">
            <div class="cart-items">
                <% cart.products.forEach(item => { %>
                    <div class="cart-item" data-id="<%= item.productId._id %>">
                        <div class="item-image">
                            <img src="<%= item.productId.images[0] %>" alt="<%= item.productId.name %>">
                        </div>
                        <div class="item-details">
                            <h3 class="item-title"><%= item.productId.name %></h3>
                            <div class="item-prices">
                                <span class="selling-price">₹<%= item.productId.sellingPrice %></span>
                                <span class="original-price">₹<%= item.productId.productPrice %></span>
                                <span class="discount"><%= item.productId.discountPercentage.toFixed(0) %>% off</span>
                            </div>
                            <div class="item-actions">
                                <div class="quantity-input">
                                    <button class="quantity-btn decrease">-</button>
                                    <input type="number" class="quantity-number" value="<%= item.quantity %>" min="1" 
                                        max="<%= item.productId.stockQuantity %>" readonly>
                                    <button class="quantity-btn increase" <%= item.productId.stockQuantity <= item.quantity ? 'disabled' : '' %>>+</button>
                                </div>
                                <button class="remove-item">Remove</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="cart-summary">
                <div class="info-card">
                    <h3>Order Summary</h3>
                    <div class="summary-row">
                        <span>Items (<%= cart.products.length %>)</span>
                        <span>₹<%= cart.totalPrice %></span>
                    </div>
                    <div class="summary-row">
                        <span>Delivery Charges</span>
                        <span>₹60</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total Amount</span>
                        <span>₹<%= cart.totalPrice + 60 %></span>
                    </div>
                    <button class="button button-primary checkout-btn">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="no-products">
            <svg width="64" height="64" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-8 2a2 2 0 1 0 4 0 2 2 0 0 0-4 0z"/>
            </svg>
            <p>Your cart is empty</p>
            <a href="/" class="button button-primary">Continue Shopping</a>
        </div>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const cartItems = document.querySelectorAll('.cart-item');

        cartItems.forEach(item => {
            const quantityInput = item.querySelector('.quantity-number');
            const decreaseBtn = item.querySelector('.decrease');
            const increaseBtn = item.querySelector('.increase');
            const removeBtn = item.querySelector('.remove-item');
            const productId = item.dataset.id;

            function updateQuantity(newQuantity) {
                fetch('/cart/update', {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, quantity: newQuantity })
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        throw new Error('Update failed');
                    }
                })
                .catch(error => alert('Error updating cart'));
            }

            decreaseBtn.addEventListener('click', () => {
                const currentValue = parseInt(quantityInput.value);
                if (currentValue > 1) {
                    updateQuantity(currentValue - 1);
                }
            });

            increaseBtn.addEventListener('click', () => {
                const currentValue = parseInt(quantityInput.value);
                if (!increaseBtn.disabled) {
                    updateQuantity(currentValue + 1);
                }
            });

            removeBtn.addEventListener('click', () => {
                fetch('/cart/remove', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId })
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        throw new Error('Remove failed');
                    }
                })
                .catch(error => alert('Error removing item'));
            });
        });
    });
</script>
